<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PersonalDetailFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="EMAIL ID"
                />

            <EditText
                android:id="@+id/profile_emailid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginRight="8dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:singleLine="true"
                android:maxLines="1"
                android:textColor="#000000"
                android:layout_marginTop="8dp"

                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c9c5c5"
                android:layout_marginTop="50dp"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textColor="#000000"

                android:text="PHONE NO"
                android:textAllCaps="true"
                />

            <EditText
                android:id="@+id/profile_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:layout_marginRight="8dp"

                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c9c5c5"
                android:layout_marginTop="50dp"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_margin="20dp"
                android:text="Address"
                android:textAllCaps="true"
                />

            <EditText
                android:id="@+id/profile_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="#000000"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"

                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c9c5c5"
                android:layout_marginTop="100dp"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_margin="20dp"
                android:text="city"
                android:textAllCaps="true"
                />

            <EditText
                android:id="@+id/profile_citydetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:layout_marginLeft="150dp"
                android:layout_marginRight="8dp"
                android:textColor="#000000"
                android:layout_marginTop="8dp"

                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c9c5c5"
                android:layout_marginTop="50dp"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_margin="20dp"
                android:text="country"
                android:textAllCaps="true"
                />

            <EditText
                android:id="@+id/profile_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="#000000"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"

                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c9c5c5"
                android:layout_marginTop="50dp"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_margin="20dp"
                android:text="Pin Code"
                android:textAllCaps="true"
                />

            <EditText
                android:id="@+id/profile_pincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:textColor="#000000"
                android:layout_marginRight="8dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:layout_marginTop="8dp"

                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c9c5c5"
                android:layout_marginTop="50dp"
                />


        </RelativeLayout>


        <Button
            android:id="@+id/btn_update_contact_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:layout_margin="20dp"
            android:text="Update Contact Details"
            android:textColor="#FFFFFF"
            />


    </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/contactpbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/colorPrimaryDark"
        android:layout_gravity="center"
        />
</FrameLayout>
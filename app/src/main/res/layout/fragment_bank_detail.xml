<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PersonalDetailFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="PAN NUMBER"
                    />

                <EditText
                    android:id="@+id/profile_pan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:textColor="#000000"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"

                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#bed9ea"
                    android:layout_marginTop="50dp"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:textColor="#000000"
                    android:text="pan image"
                    android:textAllCaps="true"
                    />

                <ImageView
                    android:id="@+id/profile_panimage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:textColor="#000000"
                    android:tint="@color/colorPrimaryDark"
                    android:src="@drawable/ic_camera_alt_black_24dp"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="20dp"

                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#bed9ea"
                    android:layout_marginTop="140dp"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="ADHAR NUMBER"
                    />

                <EditText
                    android:id="@+id/profile_adhar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:textColor="#000000"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"

                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#bed9ea"
                    android:layout_marginTop="50dp"
                    />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:textColor="#000000"
                    android:text="Adhar image"
                    android:textAllCaps="true"
                    />

                <ImageView
                    android:id="@+id/profile_adhar_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:textColor="#000000"
                    android:tint="@color/colorPrimaryDark"
                    android:src="@drawable/ic_camera_alt_black_24dp"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="20dp"

                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#bed9ea"
                    android:layout_marginTop="140dp"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_margin="20dp"
                    android:text="IFSC CODE"
                    android:textAllCaps="true"
                    />

                <EditText
                    android:id="@+id/profile_ifsc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:textColor="#000000"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"

                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#bed9ea"
                    android:layout_marginTop="50dp"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_margin="20dp"
                    android:text="BANK NAME"
                    android:textAllCaps="true"
                    />

                <EditText
                    android:id="@+id/profile_bankname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp"

                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#bed9ea"
                    android:layout_marginTop="50dp"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_margin="20dp"
                    android:text="branch name"
                    android:textAllCaps="true"
                    />

                <EditText

                    android:id="@+id/profile_branch_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:layout_marginLeft="150dp"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp"

                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#bed9ea"
                    android:layout_marginTop="50dp"
                    />


            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_margin="20dp"
                    android:text="Account number"
                    android:textAllCaps="true"
                    />

                <EditText

                    android:id="@+id/profile_Account_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp"

                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#bed9ea"
                    android:layout_marginTop="50dp"
                    />


            </RelativeLayout>


            <Button
                android:id="@+id/btn_update_bank_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Update Bank Details"
                android:background="@color/colorPrimaryDark"
                android:textColor="#FFFFFF"

                />


        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/bankpbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/colorPrimaryDark"
        />
</FrameLayout>